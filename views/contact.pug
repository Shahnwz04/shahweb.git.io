extends base.pug

block scripts
    script(src='../static/index.js')


block style 
    style 
        include ../static/style.css 
        include ../static/contact.css 

block content 
    div.container
        h2 Contact Us
        div#content
            div.left
                h1 Lets talk about everything!
                img(src="../static/stock/logo.png", alt="LOGO")
                h3 Feel free to ask us anything!
                p Have doubt or suggestion to make? Feel free to ask anything. If you have any suggestions, please let me know. Your suggestions are highly appreciated. I appreciate your time and try hard to reply to every single message posted here! Keep dropping your priceless opinions.
                a(href='https://www.instagram.com/shahnwzftw/' class="in")
                    img(src="/static/stock/ig.svg")
                
            div.right
                form(action="/contact", method="post", class="myform")
                    p Full Name
                    input(type="text", class="myinput", name="name" )
                    p E-mail
                    input(type="text", class="myinput", name="Email" )
                    p Phone
                    input(type="text", class="myinput", name="Phone" )
                    p message
                    textarea#textarea(name="address", cols="20", rows="8") 
                    //- input(type="text", class="myinput", name="Phone" )

                    button SEND MESSAGE
